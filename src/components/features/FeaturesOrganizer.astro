---
import FeaturesLink from '@components/features/FeaturesLink.astro'
---

<section class="features-organizer">
	<div class="features-organizer__inner container">
		<div class="features-organizer__text">
			<span class="features-organizer__tag section-tag section-tag--big-space">Saving Accounts</span>
			<h2 class="features-organizer__title h3">Organize your money the right way</h2>
			<p class="features-organizer__description section-description">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
			<FeaturesLink/>
		</div>
		<ul role="list" aria-label="purchases list" class="features-organizer__purchases section-features section-features--big ai-start">
			<li class="features-organizer__purchase">
				<svg class="features-purchase-icon" width="214" height="215" viewBox="0 0 214 215">
					<use href="#organizer-purchase-1"></use>
				</svg>
				<h4 class="purchase__title h6">New Laptop</h4>
				<span class="purchase__value text-muted">400$</span>
			</li>
			<li class="features-organizer__purchase">
				<svg class="features-purchase-icon" width="214" height="215" viewBox="0 0 214 215">
					<use href="#organizer-purchase-2"></use>
