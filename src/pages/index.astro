---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Homepage";
const scriptsrc = "https://identity.netlify.com/v1/netlify-identity-widget.js";
---

<BaseLayout title={title} scriptsrc={scriptsrc}>
	<main class="main">
		<section class="intro mt-0">
			<div class="intro__inner">
				<div class="intro__text">
					<h1 class="intro__title">Banking starts here.</h1>
					<p class="intro__description">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore.</p>
					<ul role="list" aria-label="feature list" class="intro__features">
						<li class="intro__feature">Instant Transfer</li>
						<li class="intro__feature">Payments worldwide</li>
						<li class="intro__feature">Saving accounts</li>
						<li class="intro__feature">100% mobile banking</li>
					</ul>
					<div class="intro__buttons">
						<a href="#" class="intro__button button-primary">Open Account</a>
						<a href="#" class="intro__button link-primary--arrow">Compare Cards</a>
					</div>
				</div>
				<div class="intro__image">
					<img src="assets/images/intro-cards.svg" alt="Intro Image" class="intro__picture">
				</div>
			</div>
		</section>
	</main>
</BaseLayout>


